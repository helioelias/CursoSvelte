{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "watch:tailwind": "postcss tailwind.base.css -o public/index.css",
    "build:tailwind": "NODE_ENV=production postcss tailwind.base.css -o public/index.css",
    "build": "yarn build:tailwind && rollup -c",
    "dev": "yarn watch:tailwind && rollup -c -w",
    "start": "sirv public",
    "test": "jest src --watchAll"
  },
  "jest": {
    "bail": false,
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "verbose": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@tailwindcss/ui": "^0.3.0",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/svelte": "^3.0.0",
    "axios": "^0.19.2",
    "babel-jest": "^26.0.1",
    "jest": "^26.0.1",
    "postcss-cli": "^7.1.1",
    "rollup": "^1.20.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.49.0",
    "svelte-jester": "^1.0.6",
    "tailwindcss": "^1.4.6"
  },
  "dependencies": {
    "pretty-print-json": "^0.2.1",
    "sirv-cli": "^0.4.4"
  }
}
